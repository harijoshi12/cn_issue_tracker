<%- contentFor('body') %>

<h1 class="mb-4">Issues</h1>

<div class="row">
  <div class="col-md-12">
    <div class="card bg-dark text-light">
      <div class="card-body">
        <h5 class="card-title">Issue List</h5>
        <a href="/issues/create" class="btn btn-primary mb-3"
          >Create New Issue</a
        >
        <ul class="list-group list-group-flush" id="issueList">
          <!-- Issues will be dynamically added here -->
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    function loadIssues() {
      $.get("/api/issues", function (data) {
        $("#issueList").empty();
        data.data.forEach(function (issue) {
          $("#issueList").append(`
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/issues/${issue._id}" class="text-light">${issue.title}</a>
                        <div>
                            <span class="badge bg-secondary">${issue.project.name}</span>
                            <span class="badge bg-primary rounded-pill">${issue.labels.length} labels</span>
                        </div>
                    </li>
                `);
        });
      });
    }

    loadIssues();
  });
</script>
